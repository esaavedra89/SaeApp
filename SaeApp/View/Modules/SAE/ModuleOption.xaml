                                                    Grid.Column="0"
                                                    Grid.Row="0"
                                                    HorizontalTextAlignment="Start"
                                                    Text="{Binding Nombre}"
                                                    VerticalTextAlignment="Center">
                                                    <customs:ButtonAlignment.FontSize>
                                                        <OnIdiom
                                                            x:TypeArguments="x:Double"
                                                            Phone="18"
                                                            Tablet="20"/>
                                                    </customs:ButtonAlignment.FontSize>
                                                </customs:ButtonAlignment>
                                            </Grid>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
